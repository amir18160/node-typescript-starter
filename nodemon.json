{
    "$schema": "http://json.schemastore.org/nodemon.json",
    "watch": ["src", "config", ".env"],
    "ignore": [
        "node_modules/**",
        "test/**",
        "dist/**",
        ".git",
        "*.test.js",
        "dist/**"
    ],
    "verbose": true,
    "restartable": "rs",
    "colours": true,
    "events": {
        "restart": "echo 'App Restarted'",
        "crash": "echo 'App Crashed!'"
    },
    "quiet": false,
    "env": {
        "NODE_ENV": "development",
        "PORT": "3000",
        "DEBUG": "app:*"
    }
}
